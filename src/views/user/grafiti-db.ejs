<%- include("../templates/header.ejs", { tipoNavbar: "logged" , tituloPestana: "Grafiti DB" , username: user.name,
    index: 2 }) %>

    <div class="container my-4">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h3>Grafitis Recientes</h3>
                    </div>

                    <div class="card-body">
                        <% if (grafitis.length> 0) { %>
                            <div class="row">
                                <% for(const image of grafitis) { %>
                                    <div class="col-6 col-sm-4 col-lg-3 mb-2" style="position: relative">
                                        <a class="" href="usuario/grafiti-view/<%= image._id %>">
                                            <img src="/api/grafitis/get-thumbnail/<%= image._id %>"
                                                alt="<%= image.description %>" class="w-100 h-100 img img-thumbnail"
                                                style="display: block">
                                            <%# if (image.gps.latitude!=0 || image.gps.longitude!=0) { %>
                                                <!--i class="fa fa-map-marker-alt"
                                                    style="position: absolute; bottom:0; left:0;"></i-->
                                                <%# } %>
                                        </a>
                                        <!--div class="row">
                                            <a class="card-link col" href="">
                                                <span class="text-dark small float-right"><#%= image.user.email %></span>
                                            </a>
                                        </div-->
                                    </div>
                                    <% } %>
                            </div>
                            <% } else { %>
                                <h3 class="display-4 text-center justify-content-center">Aún no ninguna imagen en la
                                    base de datos</h3>
                                <% } %>
                    </div>

                    <div class="card-footer">
                        <div class="row justify-content-center align-items-center">
                            <ul class="pagination">
                                <% if (pagina==1) { %>
                                    <li class="page-item disabled">
                                        <a class="page-link" aria-label="Previous">
                                <% } else { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<% pagina-1 %>" aria-label="Previous">
                                <% } %>
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>

                                <% // Si hay menos de 10 páginas
                                if (limPages < 10) { 
                                    
                                    for( let index = 1; index <= limPages; index++ ) { 

                                        if(index == pagina) { %>
                                            <li class="page-item active">
                                                <a href="?page=<%= index %>" class="page-link"><%= index %></a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item">
                                                <a href="?page=<%= index %>" class="page-link"><%= index %></a>
                                            </li>
                                        <% }

                                    }

                                } // Si hay 10 páginas o más
                                else {
                                  
                                    // Si la página es de 5 para abajo 
                                    if(pagina < 6) {
                                        
                                        // Añadimos las 5 primeras
                                        for( let index = 1; index <= 9; index++ ) { 

                                            if(index == pagina) { %>
                                                <li class="page-item active">
                                                    <a href="?page=<%= index %>" class="page-link"><%= index %></a>
                                                </li>
                                            <% } else { %>
                                                <li class="page-item">
                                                    <a href="?page=<%= index %>" class="page-link"><%= index %></a>
                                                </li>
                                            <% }

                                        } // Metemos tres puntos y la última página
                                        %>
                                        <li class="page-item disabled">
                                            <a class="page-link"><span>...</span></a>
                                        </li>
                                        <li class="page-item">
                                            <a href="?page=<%= limPages %>" class="page-link"><%= limPages %></a>
                                        </li>

                                    <% } // Si la página es de la 6 para arriba
                                    else {

                                        // Si la página es de las 5 últimas
                                        if((limPages-6) < pagina) {

                                        } // Si la página es intermedia
                                        else {

                                        }

                                    }

                                } %>

                                

                                <% if (limPages == pagina) { %>
                                <li class="page-item disabled">
                                    <a class="page-link" aria-label="Next">
                                <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= pagina+1 %>" aria-label="Next">
                                <% } %>
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../templates/footer'); %>