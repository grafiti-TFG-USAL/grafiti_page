<% if (encolumnar) { %>
    <div class="row d-none col-12 mx-auto py-2 px-0" id="carouselContainer">
        <div class="card col-12 offset-lg-3 col-lg-6 p-0">
<% } else { %>
    <div class="card d-none" id="carouselContainer">
<% } %>
        <div class="card-header" id="matchesCardHeader">
            <a id="linkToMatches" href="">
                <h4 id="matchesHeader" class="d-inline text-success">
                    <i id="matchIcon" class="fa fa-bullseye" aria-hidden="true"></i> <span id="isMatches">Coincidencias </span><span id="nMatches"></span>
                </h4>
            </a>
            <% if (propio) { %>
            <a id="imageReverseSearch" href="/usuario/grafiti/reverse-search/<%= grafiti.id %>" class="d-inline float-right">
                <button type="button" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i> Buscar</button>
            </a>
            <% } %>
        </div>
        <!--a id="linkToMatches" href="">
        <div class="card-header" id="matchesCardHeader">
